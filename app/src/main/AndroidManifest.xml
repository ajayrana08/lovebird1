<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dap.lovebirds">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SkipActivity"></activity>
        <activity android:name=".more.love.LoveActivity" />
        <activity android:name=".more.friends.FriendActivity" />
        <activity android:name=".more.family.FamilyActivity" />
        <activity android:name=".more.chafunnt.ChatActivity" />
        <activity android:name=".activity.ImageViewActivity" />
        <activity android:name=".activity.DashboardActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>