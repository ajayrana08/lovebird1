<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black"
    tools:context=".more.MoreFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_family"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_friends"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/img"
        app:layout_constraintBottom_toBottomOf="@+id/iv_family"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_family" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_love"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_family"
        app:layout_constraintStart_toStartOf="@+id/iv_family"
        app:layout_constraintTop_toBottomOf="@+id/iv_family"
        app:layout_constraintVertical_bias="0.0" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_chats"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_friends"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/iv_friends"
        app:layout_constraintTop_toBottomOf="@+id/iv_friends"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="FAMILY"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_20"
        app:layout_constraintBottom_toTopOf="@+id/iv_family"
        app:layout_constraintEnd_toEndOf="@+id/iv_family"
        app:layout_constraintStart_toStartOf="@+id/iv_family" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="FRIENDS"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_20"
        app:layout_constraintBottom_toTopOf="@+id/iv_friends"
        app:layout_constraintEnd_toEndOf="@+id/iv_friends"
        app:layout_constraintStart_toStartOf="@+id/iv_friends" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="LOVE"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="@+id/iv_love"
        app:layout_constraintStart_toStartOf="@+id/iv_love"
        app:layout_constraintTop_toBottomOf="@+id/iv_love" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="CHATS/FUNNY PICS"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="@+id/iv_chats"
        app:layout_constraintStart_toStartOf="@+id/iv_chats"
        app:layout_constraintTop_toBottomOf="@+id/iv_chats" />
</androidx.constraintlayout.widget.ConstraintLayout>